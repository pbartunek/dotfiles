# cd
alias "c=cd"
alias ".."="cd .."
alias "..."="cd ../.."
alias - -="cd -"

# ls
alias "ll"="ls -lah"
alias "ls=ls -h"

# git
alias g=git
alias gs="git status"
alias gc="git commit -m"
alias ga="git add ."
alias gd="git diff"
alias gl="git log"

# docker
alias dcleanup="docker system prune -f"
alias di="docker images"

# feh
alias feh='feh -B white --action1 "echo %N | tee -a files.log"'

# Grep
alias grep='grep --color=auto'
alias nmap-search='~/files/scripts/nmap-search.rb'

# less
alias less='less -R'

# other
alias df='df -h'
alias bc='bc -l'

