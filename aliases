# cd
alias "c=cd"
alias ".."="cd .."
alias "..."="cd ../.."
alias - -="cd -"

# ls
alias "ll"="ls -lah"

# git
alias g=git
alias gs="git status"
alias gc="git commit -m"
alias ga="git add ."
alias gd="git diff"
alias gl="git log"

# docker
alias dcleanup="docker system prune -f"
alias di="docker images"
alias dshell="docker run -ti --rm --entrypoint=/bin/bash"
alias dsh="docker run -ti --rm --entrypoint=/bin/sh"

# other
alias grep='grep --color=auto -a'
alias less='less -R'
alias tree='tree -ah'
alias df='df -h'
alias bc='bc -l'
alias ifconfig="/sbin/ifconfig"
alias poweroff='/sbin/poweroff'
alias feh='feh -B white --action1 "echo %N | tee -a files.log" --action2 "rm %N"'

