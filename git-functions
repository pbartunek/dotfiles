# set syntax=bash

# pull git repos
repos-pull() {
  update() {
        echo "pulling $1"
        git pull
  }
  repos-action update
}

# get status of git repos
# display only modified repositories
repos-status() {
  status() {
      stat=$(git -c color.status=always status -s -b)
      if [ $(echo $stat | wc -l) -gt 1 ] || [[ "$stat" =~ "ahead" ]]; then
        echo "$1"
        echo $stat
      fi
  }
  repos-action status
}

# get diff from all git repos
repos-diff() {
  diff() {
    diff=$(git -c color.diff=always diff)
    if [ ! -z "$diff" ]; then
      echo $diff
    fi
  }
  repos-action diff
}

# helper function
repos-action() {
  local repos=(dockerfiles dotfiles notes tools)
  local currentDir=$(pwd)

  cd ~/files
  for repo in $repos
    do
      if [ -d $repo ]; then
        cd $repo
        $1 $repo
        cd ..
      fi
  done
  cd $currentDir
}
